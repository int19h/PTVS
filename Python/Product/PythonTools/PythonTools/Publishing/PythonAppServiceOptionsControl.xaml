<UserControl x:Class="Microsoft.PythonTools.Publishing.PythonAppServiceOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.PythonTools.Publishing"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <RadioButton IsChecked="{Binding CreateNewService}">Create new service</RadioButton>
        <RadioButton IsChecked="{Binding UseExistingService}">Use existing service</RadioButton>
    </StackPanel>
</UserControl>
